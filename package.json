{
  "name": "dittly-website",
  "version": "0.0.1",
  "description": "The Dittly website.",
  "main": "index.js",
  "repository": "git@github.com:Dittly/website.git",
  "author": "Mike Nikles <mikenikles@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "node server.js",
    "lint": "eslint '**/*.js'",
    "start": "NODE_ENV=production node server.js",
    "test": "yarn lint && yarn test:coverage",
    "test:ci": "yarn test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!server.js",
      "!**/coverage/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "resetMocks": true
  },
  "dependencies": {
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "cookie": "^0.3.1",
    "graphql": "^0.10.3",
    "grid-styled": "^2.0.0-8",
    "isomorphic-fetch": "^2.2.1",
    "next": "^3.0.3",
    "next-routes": "^1.0.40",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-apollo": "^1.4.3",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "styled-components": "^2.1.1",
    "styled-system": "^1.0.0-8"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-plugin-styled-components": "^1.1.7",
    "coveralls": "^2.13.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.1.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^21.0.0",
    "lodash.isfunction": "^3.0.8",
    "react-test-renderer": "^15.6.1",
    "test-listen": "^1.0.2",
    "webpack-bundle-analyzer": "^2.8.2"
  }
}
