{
  "name": "dittly-website",
  "version": "0.0.1",
  "description": "The Dittly website.",
  "main": "index.js",
  "repository": "git@github.com:Dittly/website.git",
  "author": "Mike Nikles <mikenikles@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "node -r @std/esm index.js",
    "lint": "eslint '**/*.js'",
    "precommit": "lint-staged",
    "start": "NODE_ENV=production node -r @std/esm index.js",
    "test": "yarn lint && yarn test:coverage",
    "test:ci": "yarn test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:coverage": "jest --maxWorkers=4 --coverage",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -s ./static -p 6006",
    "build-storybook": "build-storybook"
  },
  "engines": {
    "node": "8.3.0"
  },
  "@std/esm": {
    "esm": "js"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/components/add/",
      "<rootDir>/components/h1/",
      "<rootDir>/coverage/",
      "<rootDir>/index.js",
      "<rootDir>/node_modules/",
      "<rootDir>/pages/_document.js",
      "<rootDir>/server.js",
      "<rootDir>/stories/",
      "<rootDir>/styles/base-styles/",
      "-stories.js$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "resetMocks": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "dependencies": {
    "@std/esm": "^0.11.0",
    "babel-plugin-inline-dotenv": "^1.1.1",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "cookie": "^0.3.1",
    "graphql": "^0.11.3",
    "grid-styled": "^2.0.0-8",
    "isomorphic-fetch": "^2.2.1",
    "next": "^4.0.0",
    "next-routes": "^1.0.40",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-apollo": "^1.4.15",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "styled-components": "^2.1.1",
    "styled-system": "^1.0.0-13"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.6",
    "@storybook/addon-links": "^3.2.6",
    "@storybook/react": "^3.2.8",
    "babel-eslint": "^8.0.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-styled-components": "^1.2.0",
    "coveralls": "^2.13.1",
    "enzyme": "^2.9.1",
    "eslint": "^4.6.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "greenkeeper-lockfile": "^1.9.0",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "lint-staged": "^4.1.3",
    "lodash.isfunction": "^3.0.8",
    "prettier": "^1.6.1",
    "react-test-renderer": "^15.6.1",
    "test-listen": "^1.0.2",
    "webpack-bundle-analyzer": "^2.8.2"
  }
}
