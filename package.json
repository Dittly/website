{
  "name": "dittly-website",
  "version": "0.0.1",
  "description": "The Dittly website.",
  "main": "index.js",
  "repository": "git@github.com:Dittly/website.git",
  "author": "Mike Nikles <mikenikles@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "node -r esm index.js",
    "lint": "eslint --fix '**/*.js'",
    "precommit": "lint-staged",
    "start": "NODE_ENV=production node -r @std/esm index.js",
    "test": "yarn lint && yarn test:coverage",
    "test:ci":
      "yarn test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:coverage": "jest --maxWorkers=4 --coverage",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -s ./ -p 6006",
    "build-storybook": "build-storybook"
  },
  "engines": {
    "node": "^8.9.0"
  },
  "jest": {
    "collectCoverageFrom": ["**/*.js"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/components/add/",
      "<rootDir>/components/h1/",
      "<rootDir>/coverage/",
      "<rootDir>/index.js",
      "<rootDir>/node_modules/",
      "<rootDir>/pages/_document.js",
      "<rootDir>/server.js",
      "<rootDir>/stories/",
      "<rootDir>/styles/base-styles/",
      "-stories.js$"
    ],
    "resetMocks": true,
    "setupFiles": ["./utils/raf-shim.js", "./utils/tests-setup.js"],
    "testEnvironment": "jest-environment-jsdom-global"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint --fix",
      "git add",
      "yarn jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link-context": "^1.0.8",
    "apollo-link-http": "^1.5.4",
    "babel-plugin-inline-dotenv": "^1.1.2",
    "babel-plugin-transform-inline-environment-variables": "^0.4.0",
    "cookie": "^0.3.1",
    "esm": "^3.0.18",
    "graphql": "^14.0.0-rc.1",
    "graphql-tag": "^2.8.0",
    "grid-styled": "^5.0.0",
    "isomorphic-fetch": "^2.2.1",
    "keen-tracking": "^2.0.0",
    "micro": "^9.1.4",
    "micro-route": "^2.4.0",
    "next": "^5.1.0",
    "next-routes": "^1.4.1",
    "prop-types": "^15.6.1",
    "react": "^16.8.3",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.8.3",
    "react-ga": "^2.4.1",
    "styled-components": "^3.2.5",
    "styled-system": "^3.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.1",
    "@storybook/addon-links": "^3.4.1",
    "@storybook/react": "^3.4.1",
    "babel-eslint": "^9.0.0",
    "babel-plugin-root-import": "^6.0.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-runtime": "^6.26.0",
    "coveralls": "^3.0.0",
    "dotenv": "^6.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^3.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "greenkeeper-lockfile": "^1.14.0",
    "husky": "^1.0.0",
    "jest": "^22.4.3",
    "jest-environment-jsdom-global": "^1.0.3",
    "lint-staged": "^7.0.4",
    "lodash.isfunction": "^3.0.9",
    "prettier": "^1.12.0",
    "react-test-renderer": "^16.3.1",
    "test-listen": "^1.0.2",
    "webpack-bundle-analyzer": "^3.0.0"
  }
}
